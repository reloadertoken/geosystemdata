<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dev.reloader.sacooliveros.Helico_Materiales.Tomos.Materias.CienciasActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1350dp"
        android:padding="20dp"
        android:background="@color/celeste">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@android:color/darker_gray"
            >

            <TextView
                android:id="@+id/tv_tomo"
                android:text="TOMO 1"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_buscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ir a:"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:layout_below="@id/tv_tomo"
                />

            <EditText
                android:id="@+id/edt_buscar"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:textColor="@android:color/darker_gray"
                android:layout_toEndOf="@+id/tv_buscar"
                android:layout_toRightOf="@+id/tv_buscar"
                android:background="@android:color/white"
                android:inputType="number"
                android:layout_alignBaseline="@+id/tv_buscar"
                android:hint=" # pÃ¡gina " />

            <ImageView
                android:id="@+id/img_buscar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/edt_buscar"
                android:layout_below="@id/tv_tomo"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_find" />

            <com.github.barteksc.pdfviewer.PDFView
                android:id="@+id/pdfView"
                android:layout_width="650dp"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="10dp"
                android:layout_below="@+id/tv_buscar"
                >

            </com.github.barteksc.pdfviewer.PDFView>



        </RelativeLayout>





    </RelativeLayout>



</android.support.constraint.ConstraintLayout>
