<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="dev.reloader.sacooliveros.mPrincipalActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1350dp"
        android:background="@color/celeste">

        <FrameLayout
            android:id="@+id/fr_helicomateriales"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="130dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="bottom"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:background="@drawable/sh_menu"

                >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="HELICO MATERIALES ACADEMICOS"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="VER DETALLE"
                    android:textSize="8dp" />


            </FrameLayout>

            <android.support.v7.widget.CardView

                android:layout_width="267dp"
                android:layout_height="180dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginVertical="15dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="267dp"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/academico_b" />


            </android.support.v7.widget.CardView>


        </FrameLayout>


        <FrameLayout
            android:id="@+id/fr_helicodiapositiva"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="130dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="bottom"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:background="@drawable/sh_menu"

                >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="HELICO MATERIALES ACADEMICOS"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="VER DETALLE"
                    android:textSize="8dp" />


            </FrameLayout>

            <android.support.v7.widget.CardView

                android:layout_width="267dp"
                android:layout_height="180dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginVertical="15dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="267dp"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/academico_b" />


            </android.support.v7.widget.CardView>


        </FrameLayout>


    </FrameLayout>





</android.support.constraint.ConstraintLayout>
